import pyttsx3

engine = pyttsx3.init()
voices = engine.getProperty('voices')

# Voice 1 – Robert
def speak_robert(text):
    engine.setProperty('voice', voices[0].id)  # Usually male default
    engine.setProperty('rate', 165)
    engine.say(text)
    engine.runAndWait()

# Voice 2 – Zara
def speak_zara(text):
    engine.setProperty('voice', voices[1].id)  # Usually female default
    engine.setProperty('rate', 185)
    engine.say(text)
    engine.runAndWait()

# Voice 3 – Orion
def speak_orion(text):
    engine.setProperty('voice', voices[0].id)  # Same voice but deeper & slower
    engine.setProperty('rate', 140)
    engine.say(text)
    engine.runAndWait()


speak_robert("Hello, I am Robert.")# We could make it a variable that points to a string so what is typed is said.
speak_zara("Hey! I'm Zara! Let's do this!")
speak_orion("I am Orion. Speak your command.")

#Now don't forget to install the library for this. The name is there in import.
